@model Event
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Directions</h1>

<form asp-action="Details" class="row">
    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="EventDescription" class="control-label"></label>
                <input asp-for="EventDescription" class="form-control" />
                <span asp-validation-for="EventDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="EventText" class="control-label"></label>
                <input asp-for="EventText" class="form-control" />
                <span asp-validation-for="EventText" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EventTriggered" /> @Html.DisplayNameFor(model => model.EventTriggered)
                </label>
            </div>
        </div>
        </div>
    <div class="col-md-3">
        <h5>Left direction</h5>
        <select asp-for="DirLeft" class="custom-select" size="10" id="selLeft">
            @foreach (var d in ViewBag.Directions)
            {
                if (d.EventId == Model.DirLeft)
                {
                    <option selected value="@d.EventId">@d.EventName</option>
                }
                else
                {
                    <option value="@d.EventId">@d.EventName</option>
                }
            }
        </select>
        <a href="#" onclick="clearSelected();">Clear all</a>
    </div>
        <div class="col-md-3">
            <h5>Right direction</h5>
            <select asp-for="DirRight" class="custom-select" size="10">
                @foreach (var d in ViewBag.Directions)
                {
                    if (d.EventId == Model.DirRight)
                    {
                        <option selected value="@d.EventId">@d.EventName</option>
                    }
                    else
                    {
                        <option value="@d.EventId">@d.EventName</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <h5>Forward direction</h5>
            <select asp-for="DirFwd" class="custom-select" size="10">
                @foreach (var d in ViewBag.Directions)
                {
                    if (d.EventId == Model.DirFwd)
                    {
                        <option selected value="@d.EventId">@d.EventName</option>
                    }
                    else
                    {
                        <option value="@d.EventId">@d.EventName</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <h5>Back direction</h5>
            <select asp-for="DirBack" class="custom-select" size="10">
                @foreach (var d in ViewBag.Directions)
                {
                    if (d.EventId == Model.DirBack)
                    {
                        <option selected value="@d.EventId">@d.EventName</option>
                    }
                    else
                    {
                        <option value="@d.EventId">@d.EventName</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <br /><input type="hidden" asp-for="EventId" />
            <a asp-controller="Event" asp-action="Index" asp-route-id="@Model.MudId" class="btn btn-info">Cancel</a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
</form>
<script type="text/javascript">
    function clearSelected() {
        var elements = document.getElementsByTagName("select");
        for (var k = 0; k < elements.length; k++) {
            for (var i = 0; i < elements[k].options.length; i++) {
                elements[k].options[i].selected = false;
            }
        }
    }
</script>