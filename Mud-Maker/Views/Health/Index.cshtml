@model IEnumerable<Mud_Maker.Data.Health>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Health</h1>

<p class="text-light">
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsGained)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsGained)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HealthId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HealthId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HealthId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
